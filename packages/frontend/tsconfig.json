{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"composite": true,
		"useDefineForClassFields": true,
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@puraty/render",
		"sourceMap": true,
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ES2019", "DOM"],
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"types": ["vite/client"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@puraty/server": ["../server/src/types/export.ts"]
		}
	},
	"include": ["src/**/*"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		},
		{
			"path": "../server/tsconfig.json"
		}
	]
}
